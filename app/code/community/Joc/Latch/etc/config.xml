<?xml version="1.0"?>
<config>
    <modules>
        <Joc_Latch>
            <version>0.1.0</version>
        </Joc_Latch>
    </modules>
    <global>
        <blocks>
            <latch>
                <class>Joc_Latch_Block</class>
            </latch>
        </blocks>
        <helpers>
            <latch>
                <class>Joc_Latch_Helper</class>
            </latch>
        </helpers>
        <models>
            <latch>
                <class>Joc_Latch_Model</class>
                <resourceModel>latch_mysql4</resourceModel>
            </latch>
        </models>
        <resources>
            <latch_setup>
                <setup>
                    <module>Joc_Latch</module>
                    <class>Mage_Customer_Model_Entity_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </latch_setup>
            <latch_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </latch_write>
            <latch_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </latch_read>
        </resources>
    </global>
    <frontend>
        <translate>
            <modules>
                <Joc_Latch>
                    <files>
                        <default>Joc_Latch.csv</default>
                    </files>
                </Joc_Latch>
            </modules>
        </translate>
        <layout>
            <updates>
                <module>
                    <file>latch/latch.xml</file>
                </module>
            </updates>
        </layout>
        <routers>
            <latch>
                <use>standard</use>
                <args>
                    <module>Joc_Latch</module>
                    <frontName>latch</frontName>
                </args>
            </latch>
        </routers>
    </frontend>
    <adminhtml>
        <translate>
            <modules>
                <Joc_Latch>
                    <files>
                        <default>Joc_Latch.csv</default>
                    </files>
                </Joc_Latch>
            </modules>
        </translate>
    </adminhtml>
</config> 